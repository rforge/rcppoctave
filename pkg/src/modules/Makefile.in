CC = @CC@
CFLAGS = @CFLAGS@ -fPIC -Wall -O6 -std=gnu99
CXXFLAGS = @CXXFLAGS@ -fPIC -Wall -O6

# Get flags for R
R_CPPFLAGS = @R_CPPFLAGS@
R_LDFLAGS = @R_LDFLAGS@

OCT_SOURCES = $(wildcard ./*.cc)
OCT_OBJECTS = $(OCT_SOURCES:.cc=.oct)

all: ${OCT_OBJECTS}

%.oct: %.cc
	@OCTAVE_MKOCTFILE@ -v -c ${R_CPPFLAGS} $(PKG_CPPFLAGS) $*.cc 
	@OCTAVE_MKOCTFILE@ $*.o  ${R_LDFLAGS} $(PKG_LIBS) --output $@

utils.oct: utils.cc
	@OCTAVE_MKOCTFILE@ $<
	
clean:
	rm -vf *.o *~
	
clean-all: clean
	rm -vf *.oct
